
@{
    ViewBag.Title = "MainPG";
}

<h2>MainPG</h2>

<html>

<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

</head>
<body>
    <h1>
        WELCOME TO MY SWAMP
    </h1>

    <div id="img"></div>
    @*<img src="~/Scripts/pic1.jpg" width="300">*@
    <h2>Le fam:</h2>
    <div id="fam"></div>

    <h2>1st deg friends:</h2>
    <div id="fstdeg"></div>

    <h2>2nd deg friends:</h2>
    <div id="snddeg"></div>

    <h2>3rd deg friends:</h2>
    <div id="trddeg"></div>

    <div id="dujman">
        <label>The id of the dujman: </label>
        <input type="number" id="duj" name="duj"><br>
        <input type="submit" id="submit">
    </div>

    <script>
        $(document).ready(function () {
            $.get("/Main/getPic",
                function (data, status) {
                    console.log(data);
                    console.log("fac ceva aici");
                    $("#img").html(data);
                    
                });
            $.get("/Main/getFamily",
                function (data, status) {
                    console.log(data);
                    console.log("fac ceva aici");
                    $("#fam").html(data);

                });
            $.get("/Main/getFstDeg",
                function (data, status) {
                    console.log(data);
                    console.log("fac ceva aici");
                    $("#fstdeg").html(data);

                });
            $.get("/Main/getSndDeg",
                function (data, status) {
                    console.log(data);
                    console.log("fac ceva aici");
                    $("#snddeg").html(data);

                });
            $.get("/Main/getTrdDeg",
                function (data, status) {
                    console.log(data);
                    console.log("fac ceva aici");
                    $("#trddeg").html(data);

                });
            $("#submit").on("click", function () {
                var duj = $('#dujman').find('input[name="duj"]').val();
                $.ajax({
                    url: "deleteDujmani",
                    type: "get",
                    data: {
                        'dujman': +duj,
                       
                    },
                    success: function (data) {
                        alert(data);
                    }
                });
            });
        });
    </script>
</body>



</html>


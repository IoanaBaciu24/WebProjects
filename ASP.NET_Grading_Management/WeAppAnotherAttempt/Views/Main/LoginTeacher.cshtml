        $(document).ready(function () {
            $("#btn").click(function () {
                console.log(document.getElementById("uname").innerText);
                alert("aici");
                $.get(
                    "Main/CheckLoginTeacher", { uname: document.getElementById("uname").innerText, passw: document.getElementById("passw").innerText },
                    function (data, status) {
                        alert(data);
                        if (data === "yas")
